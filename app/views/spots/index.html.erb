<div class="card-group">
  <% @spots.each do |spot| %>
    <div class="card">
      <%= cl_image_tag spot.image.key, class:"card-img-top"%>
      <div class="card-body">
        <h5 class="card-title"><%= spot.name %></h5>
        <h6 class="card-title"><%=spot.description %></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= spot.location %></h6>
        <p class="card-text"><%= spot.price %> â‚¬</p>
        <%= link_to "More details", spot_path(spot), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<button class="button-ajouter-un-spot"><%= link_to "Ajouter un spot", new_spot_path %></button>
