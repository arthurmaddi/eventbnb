<div class="card-group">
  <% @spots.each do |spot| %>
    <div class="card">
      <%= cl_image_tag spot.image.key, class:"card-img-top"%>
      <div class="card-body">
        <h5 class="card-title"><%= spot.name %></h5>
        <h6 class="card-title"><%=spot.description %></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= spot.location %></h6>
        <p class="card-text"><%= spot.price %> â‚¬</p>
        <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(spot.updated_at) %> ago</small></p>
        <%= link_to "More details", spot_path(spot), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<%# map %>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

