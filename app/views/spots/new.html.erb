<div class="formulary-container">
  <h1>Nouveau spot</h1>
  <%= simple_form_for @spot do |f| %>
    <div class="form-group">
      <%= f.input :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :price, class: "form-control" %>
    </div>

    <%= f.input :image, as: :file %>

    <div class="form-button">
      <%= f.submit "Créer le spot", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
<%= link_to "Retour à la liste des spots", spots_path %>
