<h1>Nouveau spot</h1>

<%= form_for @spot do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nom du spot" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Emplacement du spot" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix du spot" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Créer le spot", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Retour à la liste des spots", spots_path %>
