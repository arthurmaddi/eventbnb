<div class="formulary-container">
  <h1>New spot</h1>
  <%= simple_form_for @spot do |f| %>
    <div class="form-group">
      <%= f.input :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :price, class: "form-control" %>
    </div>

    <%= f.input :image, as: :file %>

    <div class="form-button">
      <%= f.submit "Create the spot", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
<%= link_to "Return to the list", spots_path, class: "button-ajouter" %>
